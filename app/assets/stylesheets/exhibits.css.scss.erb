@import "bootstrap-responsive";
@import "bootstrap";

body {
    margin: 0px;
    padding-top: 53px;
    background: url(<%= asset_path "img-bg-sea.jpg"%>) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    color: #72809F;
}

.opaqify{
    background-color:rgba(255,255,255,0.05);
    padding-right: 9px;
    padding-left: 0px;
    padding-top: 13px;
    padding-bottom: 13px;
    border-radius: 15px;
    -webkit-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    -moz-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    box-shadow: 0 9px 0 rgba(0,0,0,.1);

}

.blanker-box{
    border: 2px solid #666666;
    background-color:rgba(255,255,255,0.02);
    /*margin-right: 5px;*/
    -webkit-border-radius: 10px;
    -ms-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 15px;
    -webkit-box-shadow: inset 0 0 3px #000;
    -ms-box-shadow: inset 0 0 3px #000;
    box-shadow: inset 0 0 3px #000;
    padding: 2px;
}

.opaqify-container{
    background-color:rgba(255,255,255,0.05);
    padding-right: 11px;
    padding-left: 13px;
    padding-top: 13px;
    padding-bottom: 13px;
    border-radius: 15px;
    width: auto;
    //border-top: outset 6px #eee;
    //border-left: outset 6px #eee;
    //border-right: outset 6px #eee;
    //border-bottom: outset 6px #ccc;
    -webkit-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    -moz-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    box-shadow: 0 9px 0 rgba(0,0,0,.1);
}

.blank-box{
    border: 2px solid #666666;
    background-color:rgba(255,255,255,0.09);
    /*margin-right: 5px;*/
    -webkit-border-radius: 10px;
    -ms-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 3px #000;
    -ms-box-shadow: inset 0 0 3px #000;
    box-shadow: inset 0 0 3px #000;
    text-align: center;
}

.boxed-template {
    background: #fff;
    background: -webkit-gradient(linear,left top,left bottom,color-stop(0%,#fff),color-stop(100%,#ddd));
    background: -webkit-linear-gradient(top,#fff 0,#ddd 100%);
    background: -moz-linear-gradient(top,#fff 0,#ddd 100%);
    background: -ms-linear-gradient(top,#fff 0,#ddd 100%);
    background: -o-linear-gradient(top,#fff 0,#ddd 100%);
    background: linear-gradient(top,#fff 0,#ddd 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff',endColorstr='#dddddd',GradientType=0);
    border-top: outset 6px #eee;
    border-left: outset 6px #eee;
    border-right: outset 6px #eee;
    border-bottom: outset 6px #ccc;
    -webkit-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    -moz-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    box-shadow: 0 9px 0 rgba(0,0,0,.1);
    border-radius: 5px;
}

