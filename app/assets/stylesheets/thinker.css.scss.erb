    border-radius: 15px;
    width: auto;
    //border-top: outset 6px #eee;
    //border-left: outset 6px #eee;
    //border-right: outset 6px #eee;
    //border-bottom: outset 6px #ccc;
    -webkit-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    -moz-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    box-shadow: 0 9px 0 rgba(0,0,0,.1);
}

.blank-box{
    border: 2px solid #666666;
    background-color:rgba(255,255,255,0.05);
    /*margin-right: 5px;*/
    -webkit-border-radius: 10px;
    -ms-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 3px #000;
    -ms-box-shadow: inset 0 0 3px #000;
    box-shadow: inset 0 0 3px #000;
    text-align: center;
}


.boxed-template {
    background: #fff;
    background: -webkit-gradient(linear,left top,left bottom,color-stop(0%,#fff),color-stop(100%,#ddd));
    background: -webkit-linear-gradient(top,#fff 0,#ddd 100%);
    background: -moz-linear-gradient(top,#fff 0,#ddd 100%);
    background: -ms-linear-gradient(top,#fff 0,#ddd 100%);
    background: -o-linear-gradient(top,#fff 0,#ddd 100%);
    background: linear-gradient(top,#fff 0,#ddd 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff',endColorstr='#dddddd',GradientType=0);
    border-top: outset 6px #eee;
    border-left: outset 6px #eee;
    border-right: outset 6px #eee;
    border-bottom: outset 6px #ccc;
    -webkit-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    -moz-box-shadow: 0 9px 0 rgba(0,0,0,.1);
    box-shadow: 0 9px 0 rgba(0,0,0,.1);
    border-radius: 5px;
}




