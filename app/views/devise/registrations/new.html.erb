<%= render 'layouts/partials/navigation' %>
<br>
<br>
<br>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4">

    </div>
    <div class="span4">
      <div class="opaqify-container" style="text-align: center">
        <div class="blanker-box" style="padding: 13px">
        <h2 class="lead" style="color: white">Sign Up</h2>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div>Email &nbsp; : &nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :required => true %></div>
            <div>Alias &nbsp; : &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <%= f.text_field :alias, :placeholder => "Your alias or pen-name...", :required => true,  :onkeyup => "CheckMaxlength(this);", :maxlength => 19%></div>

        <div>
          Password &nbsp; : &nbsp;&nbsp;&nbsp;<%= f.password_field :password , :placeholder => "Password", :required => true%></div>
        <div>
          Confirm &nbsp; : &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.password_field :password_confirmation , :placeholder => "Confirm Password", :required => true%></div>

            <% if devise_mapping.rememberable? -%>
                <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            <% end -%>

            <div><%= f.submit "Sign Up" , :class=>"span5 btn btn-primary"%></div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    </div>
    <div class="span4">

    </div>
  </div>
</div>