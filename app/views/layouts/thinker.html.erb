<!DOCTYPE html>
<html>
<head>
  <title>MentalConstructs - Thinker</title>
  <%= stylesheet_link_tag  "thinker", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<!--<body style="background-attachment: fixed;">-->
<body>

<%= render 'layouts/partials/navigation' %>



<div class="container-fluid">

  <%#= render 'layouts/partials/flash_messages' %>

  <div class="row-fluid">


    <!--======================================= Main area =======================================-->
    <div class="span9">
      <div class="row-fluid">
        <div class="span8">
          <div class="blanker-box" style="padding: 5px;">
            <div class="text-info" style="text-align: center;font-size: 13px;padding-bottom: 5px"><strong>Out of Sight, Out of Mind!</strong>
             <span class="pull-right"><button class="btn btn-mini" id="notifier-toggle"><i class="icon-adjust"></i></button></span></div>
          </div>
        </div>
        <div class="span4">
          <div class="blank-box">
            <%= render 'thinker/partials/remembrall_form' %>
          </div>
        </div>
      </div>
      <%= yield %>
      <br>
    </div>


    <!--======================================= Right Widgets =======================================-->
    <aside class="span3">
      <div id="widget-bar" data-spy="affix" style="padding-right: 11px;">

        <div  class="blank-box">
            <%= render 'thinker/partials/research_forms' %>
        </div>
        <br>
        <hr>
            <div class="opaqify-container" style="background-color:rgba(255,255,255,0.1);">
              <%= render 'thinker/partials/epiphany_form' %>
            </div>
          <br>
            <div class="opaqify-container" style="background-color:rgba(255,255,255,0.1);">

              <%= render 'thinker/partials/brain_wave_form' %>
            </div>
          <br>
            <div class="boxed-template form-inline" >
              <%= render 'thinker/partials/factoid_form' %>
            </div>

        </div>
  </aside>

</div>
</div>


<!--<hr>-->
<%#= render 'layouts/partials/footer' %>

</body>
</html>
