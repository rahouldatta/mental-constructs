<div class="tab-content">
  <div class="tab-pane fade in active">
    <% if @link_hoards.keys.blank? %>
        <p>No Link has been hoarded yet.</p>
    <% else %>
    <p>Please select category of links you would like to review.</p>
    <% end %>

  </div>
  <% @link_hoards.each do |category,link_hoards|%>
  <div class="tab-pane fade" id="link-hoard-category-<%= category %>">
    <% link_hoards.each do |link_data| %>
        <div class="row-fluid">
          <div class="span10">
            <p><%= link_data.description.capitalize %><br>
             &nbsp;&nbsp;&nbsp;&nbsp;&bull;&nbsp;&nbsp; <a href="<%= link_data.correct_link %>" target="_blank" class="btn-link"><%= link_data.correct_link %></a></p>
          </div>
          <div class="span2">
            <%= link_to(delete_link_thinker_path(link_data), class: "btn btn-mini btn-danger", :title => "Permanently Delete This Link Cache.", confirm: "Are you sure you want to delete this link?", :remote => true) do %>
                <i class="icon-trash icon-white"></i>
            <% end %>
          </div>
        </div>

        <hr>
    <% end %>
  </div>
  <% end %>
</div>

