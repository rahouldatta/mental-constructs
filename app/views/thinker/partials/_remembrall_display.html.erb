<% if @remembralls.blank? %>
    No ToDo's Recorded yet. Record something so that you are reminded...
<% else %>
    <div id="tooltip-show"><a style="float: right;" id="marquee-toggle" title="Hide/Show Ticker" class="btn-mini btn-inverse "><i class="icon-bullhorn icon-white"></i></a></div>

    &nbsp;
    <% sample = @incomplete_tasks.sample %>
    <div class="blanker-box" id="marquee-display">
      <marquee onmouseover="this.stop();" onmouseout="this.start();" behavior="alternate" style="color:white;padding: 5px" ><%= sample.task.capitalize rescue "No Recorded Tasks."%>&nbsp;&nbsp;:-&nbsp;
        <span class="muted"><small><%= sample.created_at.utc.localtime.to_s(:short) rescue nil%></small></span></marquee>
    </div>
    <br>
    <div class="text-info"><h4><em>Pending Tasks : </em></h4></div>
    <% @incomplete_tasks.each do |remembrall| %>

        <div class="row-fluid">

          <div class="span9">
            <div class="">
              <p ><%= remembrall.task.capitalize%></p>
            </div>
          </div>
          <div class="span3">
            <div class="">
              <div id="tooltip_show">
                <div class="muted" title="Task Recorded At"><small><%= remembrall.created_at.utc.localtime.to_s(:long)%></small>&nbsp;|
                  <%= link_to(delete_remembrall_thinker_path(remembrall), class: "btn btn-mini btn-danger", :title => "Permanently Delete This Reminder.", confirm: "Are you sure you want to delete this task?", :remote => true) do %>
                      <i class="icon-trash icon-white"></i>
                  <% end %>&nbsp;|&nbsp;
                  <%= link_to(mark_remembrall_as_complete_thinker_path(remembrall), class: "btn btn-mini btn-success", :title => "Mark this task as complete but store it for future reference.", confirm: "This task will be marked as completed. You will not see this task in the tickers.", :remote => true) do %>
                      <i class="icon-ok icon-white"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    <br>
    <hr>
    <div class="text-info"><h4><em>Completed Tasks : </em></h4></div>
    <div class="blanker-box" style="padding: 13px">
    <% @remembralls.where(:status => true).each do |remembrall| %>

        <div class="row-fluid">

          <div class="span10">
            <div class="">
              <p class="muted"><%= remembrall.task.capitalize%></p>
            </div>
          </div>
          <div class="span2">
            <div class="">
              <div id="tooltip_show">
                <div class="muted" title="Task Completed at : "><small><%= remembrall.updated_at.utc.localtime.to_s(:short)%></small>&nbsp;|
                  <%= link_to(delete_remembrall_thinker_path(remembrall), class: "btn btn-mini btn-danger", :title => "Permanently Delete This Reminder.", confirm: "Are you sure you want to delete this task?", :remote => true) do %>
                      <i class="icon-trash icon-white"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    </div>
    <%#= will_paginate @constructs,:container => false, :renderer => BootstrapPagination::Rails %>
<% end %>
<script>
    $('#tooltip_show').tooltip('show')
</script>
<script>
    $(document).ready(function() {
        $('#marquee-toggle').click(function() {
            $('#marquee-display').toggle();//Form shows on button click
        });
    });
</script>