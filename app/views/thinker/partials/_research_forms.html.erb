<ul class="nav nav-pills" id="researchTabs" style="padding-left: 7px;padding-top: 5px;">
  <li class="active"><a href="#google_search">Google</a></li>
  <li><a href="#wikipedia_search" data-toggle="tab">Wikipedia</a></li>
  <li><a href="#bing_search" data-toggle="tab">Bing</a></li>
  <li><a href="#yahoo_search" data-toggle="tab">Yahoo</a></li>
</ul>
<!--</div>-->
<div class="tab-content">
  <div class="tab-pane fade in active" id="google_search">
    <%= render 'widgets/research_forms/google_search_form' %>
  </div>
  <div class="tab-pane fade" id="wikipedia_search">
    <%= render 'widgets/research_forms/wikipedia_search_form' %>
  </div>
  <div class="tab-pane fade" id="bing_search">
    <%= render 'widgets/research_forms/bing_search_form' %>
  </div>
  <div class="tab-pane fade" id="yahoo_search">
    <%= render 'widgets/research_forms/yahoo_search_form' %>
  </div>
</div>

<script>
    $('#researchTabs a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>

