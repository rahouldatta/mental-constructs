<div class="blanker-box" style="padding: 13px;">
<% if @brain_storm_sessions.blank? %>
    <p>No Brain Storm Sessions have been initiated yet.</p>
<% else %>
    <% @brain_storm_sessions.each do |brain_storm_session| %>
        <div class="container-fluid">
          <div class="row-fluid">

            <div class="span2">
              <% unless brain_storm_session.construct_id.nil? %>
                  <br>
              <p><%= link_to construct_path(brain_storm_session.construct_id), :class=>"span 12 btn btn-default" do %>
                    <i class="icon-file"></i> Review
                <% end %></p>
              <br>
              <br>
              <% end %>
              <p style="text-align: center">
                <%= link_to delete_brain_storm_thinker_path(brain_storm_session), :class=>"btn-small btn-danger", :confirm => "Are you sure this entire BrainStorm is to be Dropped?", :remote => true do %>
                    <i class="icon-trash icon-white"></i> Delete
                <% end %></p>

            </div>

            <div class="span7">
              <h5 class="text-info"><%= brain_storm_session.session_title.titleize %><span class="muted">&nbsp;&nbsp;- &nbsp;<small><%= brain_storm_session.created_at.utc.localtime.to_s(:short)%></small></span></h5>
              <% brain_storm_session.flashes.each do |flash| %>
                  <p>&nbsp;&nbsp;&nbsp;&bull;&nbsp;&nbsp;<%="#{flash.flash.capitalize}" %>&nbsp;&nbsp;&nbsp;<span class="muted"><%= "-- (#{flash.sub_points.count} subpoints)" %></span> </p>
              <% end %>
            </div>

            <div class="span3">


              <% cq = brain_storm_session.construct %>
              <% if cq.nil?%>
                  <p class="muted" style="text-align: center">Belongs To Construct -
                  <div class="blanker-box" style="padding: 7px;text-align: center;color: red"> Not Mapped to any Construct </div></p>
            <% else%>
                  <p class="muted" style="text-align: center">Belongs To Construct -
                  <div class="blanker-box" style="padding: 7px;text-align: center;color: white"> <%= brain_storm_session.construct.title.titleize rescue "Not Mapped to any Construct"%></div></p>
              <% end%>


            </div>

          </div>
          <hr>
        </div>
    <% end %>
<% end %>
</div>
